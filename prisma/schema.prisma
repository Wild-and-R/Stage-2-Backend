generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role String @default("user")
  comments Comment[]
  posts    Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  userId      Int
  isAdminOnly Boolean   @default(false)

  comments Comment[]
  user     User @relation(fields: [userId], references: [id])
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  userId  Int
  postId  Int
  post    Post   @relation(fields: [postId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
}
