generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  points    Int       @default(0)
  role      String    @default("user") // "user" | "supplier" | "admin"

  orders    Order[]
  supplier  Supplier? // optional, only if this user is a supplier
}

model Supplier {
  id        Int             @id @default(autoincrement())
  userId    Int             @unique
  name      String
  stocks    ProductStock[]

  user      User            @relation(fields: [userId], references: [id])
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  price       Float
  productImage String?
  orders      Order[]
  stocks      ProductStock[]
}

model ProductStock {
  id         Int      @id @default(autoincrement())
  productId  Int
  supplierId Int
  quantity   Int

  product  Product  @relation(fields: [productId], references: [id])
  supplier Supplier @relation(fields: [supplierId], references: [id])

  @@unique([productId, supplierId])
}

model Order {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
